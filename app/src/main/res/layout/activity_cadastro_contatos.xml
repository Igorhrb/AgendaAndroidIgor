<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroContatos">

  <EditText
      android:id="@+id/activity_cadastro_nome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:ems="10"
      android:hint="Nome"
      android:inputType="textPersonName" />

  <EditText
      android:id="@+id/activity_cadastro_telefone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="100dp"
      android:ems="10"
      android:hint="Telefone"
      android:inputType="phone" />

  <EditText
      android:id="@+id/activity_cadastro_endereco"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="100dp"
      android:ems="10"
      android:gravity="start|top"
      android:hint="EndereÃ§o"
      android:inputType="textMultiLine" />

  <EditText
      android:id="@+id/activity_cadastro_aniversario"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="150dp"
      android:layout_marginLeft="100dp"
      android:ems="10"
      android:hint="00/00/0000"
      android:inputType="date" />

  <Button
      android:id="@+id/activity_cadastro_button_cadastrar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="200dp"
      android:layout_marginLeft="145dp"
      android:text="Cadastrar" />

  <Button
      android:id="@+id/activity_cadastro_button_voltar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="250dp"
      android:layout_marginLeft="160dp"
      android:text="Voltar" />

</RelativeLayout>